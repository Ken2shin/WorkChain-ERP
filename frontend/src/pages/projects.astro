---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Projects Management">
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-30 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Projects Management</h1>
          <p class="text-gray-500 text-sm">Manage projects, tasks and resource allocation</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm transition-colors">
          Back to Dashboard
        </a>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" x-data="projectStats()">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-orange-500">
          <p class="text-gray-600 text-sm font-medium">Total Projects</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.total_projects || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">All projects</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <p class="text-gray-600 text-sm font-medium">Active</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.active_projects || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Currently running</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-yellow-500">
          <p class="text-gray-600 text-sm font-medium">On Hold</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.on_hold_projects || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Paused projects</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
          <p class="text-gray-600 text-sm font-medium">Total Tasks</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.total_tasks || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">All tasks</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden mb-8" x-data="projectsList()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Projects</h2>
          <p class="text-sm text-gray-500 mt-1">Active and recent projects from database</p>
        </div>

        <div x-show="loading" class="p-12 text-center">
          <div class="inline-block">
            <div class="animate-spin h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full"></div>
            <p class="text-gray-500 mt-4">Loading projects...</p>
          </div>
        </div>

        <div x-show="error && !loading" class="p-6 bg-red-50 border-l-4 border-red-500" style="display: none;">
          <p class="text-red-800 font-medium" x-text="error"></p>
        </div>

        <div x-show="!loading && !error" class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Name</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Start Date</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">End Date</th>
                <th class="px-6 py-3 text-right text-sm font-medium text-gray-700">Budget</th>
                <th class="px-6 py-3 text-center text-sm font-medium text-gray-700">Status</th>
              </tr>
            </thead>
            <tbody>
              <template x-for="project in projects" :key="project.id">
                <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-sm text-gray-900 font-medium" x-text="project.name"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="formatDate(project.start_date)"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="formatDate(project.end_date)"></td>
                  <td class="px-6 py-4 text-sm text-right text-gray-900 font-bold" x-text="formatCurrency(project.budget)"></td>
                  <td class="px-6 py-4 text-center">
                    <template x-if="project.status === 'active'">
                      <span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Active</span>
                    </template>
                    <template x-if="project.status === 'on_hold'">
                      <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-full">On Hold</span>
                    </template>
                    <template x-if="project.status === 'completed'">
                      <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">Completed</span>
                    </template>
                  </td>
                </tr>
              </template>

              <template x-if="projects.length === 0 && !loading && !error">
                <tr>
                  <td colspan="5" class="px-6 py-12 text-center">
                    <p class="text-gray-500">No projects found.</p>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden" x-data="tasksList()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Recent Tasks</h2>
          <p class="text-sm text-gray-500 mt-1">Upcoming and in-progress tasks</p>
        </div>

        <div x-show="loading" class="p-12 text-center">
          <div class="animate-spin h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full mx-auto"></div>
        </div>

        <div x-show="!loading" class="grid grid-cols-1 md:grid-cols-2 gap-4 p-6">
          <template x-for="task in tasks" :key="task.id">
            <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition-colors">
              <h3 class="font-semibold text-gray-900" x-text="task.title"></h3>
              <p class="text-sm text-gray-600 mt-1" x-text="`Project ID: ${task.project_id}`"></p>
              <div class="mt-4 flex items-center justify-between pt-4 border-t border-gray-100">
                <span class="text-xs text-gray-500" x-text="`Due: ${formatDate(task.due_date)}`"></span>
                <span :class="{'bg-red-100 text-red-800': task.priority === 'high', 'bg-yellow-100 text-yellow-800': task.priority === 'medium', 'bg-green-100 text-green-800': task.priority === 'low'}" class="text-xs font-medium px-2 py-1 rounded">
                  <span x-text="task.priority || 'medium'"></span>
                </span>
              </div>
            </div>
          </template>

          <template x-if="tasks.length === 0 && !loading">
            <div class="col-span-full text-center py-8">
              <p class="text-gray-500">No tasks available.</p>
            </div>
          </template>
        </div>
      </div>

    </main>
  </div>

  <script>
    // 1. Declaración global para silenciar el error "Cannot find name Alpine"
    declare const Alpine: any;

    function projectStats() {
      return {
        stats: {
          total_projects: 0,
          active_projects: 0,
          on_hold_projects: 0,
          total_tasks: 0,
        },
        loading: true,

        async init() {
          await this.loadStats();
        },

        async loadStats() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/projects/stats', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const data = await response.json();
            if (data.success) {
              this.stats = data.data || this.stats;
            }
          } catch (err) {
            console.error('[v0] Project stats error:', err);
          } finally {
            this.loading = false;
          }
        },
      };
    }

    function projectsList() {
      return {
        // 2. Tipado explícito para arrays
        projects: [] as any[],
        loading: true,
        // 3. Tipado explícito para error
        error: null as string | null,

        async init() {
          await this.loadProjects();
        },

        async loadProjects() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/projects/list', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) {
              if (response.status === 401) window.location.href = '/login';
              throw new Error(`HTTP ${response.status}`);
            }

            const data = await response.json();
            if (data.success) {
              this.projects = data.data || [];
            }
          } catch (err) {
            console.error('[v0] Projects loading error:', err);
            this.error = 'Failed to load projects';
          } finally {
            this.loading = false;
          }
        },

        // 4. Agregado tipo ': any' al parámetro
        formatCurrency(value: any) {
          return new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD',
          }).format(value || 0);
        },

        // 5. Agregado tipo ': any' al parámetro
        formatDate(date: any) {
          return new Date(date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });
        },
      };
    }

    function tasksList() {
      return {
        tasks: [] as any[],
        loading: true,

        async init() {
          await this.loadTasks();
        },

        async loadTasks() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/projects/tasks', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const data = await response.json();
            if (data.success) {
              this.tasks = (data.data || []).slice(0, 6);
            }
          } catch (err) {
            console.error('[v0] Tasks loading error:', err);
          } finally {
            this.loading = false;
          }
        },

        formatDate(date: any) {
          return new Date(date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });
        },
      };
    }

    // Initialize
    document.addEventListener('alpine:init', () => {
      const appStore = Alpine.store('app');
      if (appStore && appStore.authenticated) {
        const stats = projectStats();
        const projects = projectsList();
        const tasks = tasksList();
        
        stats.init();
        projects.init();
        tasks.init();

        Alpine.data('projectStats', () => stats);
        Alpine.data('projectsList', () => projects);
        Alpine.data('tasksList', () => tasks);
      } else {
        window.location.href = '/login';
      }
    });
  </script>
</Layout>