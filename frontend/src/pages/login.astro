---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - WorkChain ERP">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      
      <div x-data="loginForm" class="bg-slate-800 border border-slate-700 rounded-lg shadow-2xl p-8 relative overflow-hidden">
        
        <div class="text-center mb-8 relative z-10">
          <div class="mb-4">
            <svg class="w-16 h-16 mx-auto text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white mb-2">WorkChain ERP</h1>
          <p class="text-slate-400">Sistema de Gesti√≥n Empresarial</p>
        </div>

        <div class="mb-6 relative z-10 min-h-[80px]">
            
            <template x-if="serverStatus === 'checking'">
                <div class="p-4 bg-blue-500/10 border border-blue-500/50 rounded-lg flex items-center gap-4 shadow-lg">
                    <div class="animate-spin h-6 w-6 border-2 border-blue-400 border-t-transparent rounded-full"></div>
                    <div class="text-sm text-blue-300">
                        <p class="font-bold text-blue-200">Conectando...</p>
                        <p class="text-xs opacity-70">Verificando base de datos</p>
                    </div>
                </div>
            </template>

            <template x-if="serverStatus === 'error'">
                <div class="p-4 bg-red-500/10 border border-red-500/50 rounded-lg shadow-lg">
                    <div class="flex items-center gap-3 mb-2">
                        <div class="bg-red-500/20 p-1 rounded-full">
                            <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                        </div>
                        <span class="text-sm text-red-300 font-bold">Error de Conexi√≥n</span>
                    </div>
                    <p class="text-xs text-red-400/80 mb-3">No se pudo contactar con el servidor.</p>
                    <button @click="init()" class="w-full py-2 bg-red-600 hover:bg-red-700 text-white text-xs font-bold rounded transition">
                        Reintentar
                    </button>
                </div>
            </template>

            <template x-if="serverStatus === 'connected'">
                <div class="p-3 bg-emerald-500/10 border border-emerald-500/40 rounded-lg flex flex-col items-center justify-center gap-1 shadow-lg mb-4">
                    <div class="flex items-center gap-2 text-emerald-400">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                        <span class="text-sm font-bold">Sistema Online</span>
                    </div>
                    <span class="text-[10px] text-emerald-500/70 uppercase tracking-wider">Conexi√≥n Segura</span>
                </div>
            </template>
        </div>

        <form @submit.prevent="submit" class="space-y-4 relative z-10">
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Organizaci√≥n</label>
            <div class="relative">
                <select
                  x-model="form.tenantId"
                  :disabled="serverStatus !== 'connected'"
                  class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-blue-500 transition disabled:opacity-50 appearance-none"
                  required
                >
                  <option value="" disabled>Seleccionar organizaci√≥n...</option>
                  <template x-for="org in organizations" :key="org.id">
                    <option :value="org.id" x-text="org.name"></option>
                  </template>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-slate-400">
                    <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
                </div>
            </div>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Correo Electr√≥nico</label>
            <input
              type="email"
              x-model="form.email"
              :disabled="serverStatus !== 'connected'"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition disabled:opacity-50"
              placeholder="usuario@empresa.com"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Contrase√±a</label>
            <input
              type="password"
              x-model="form.password"
              :disabled="serverStatus !== 'connected'"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition disabled:opacity-50"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              required
            />
          </div>

          <div x-show="form.error" class="p-3 bg-red-500/10 border border-red-500/50 rounded-lg text-center">
            <p class="text-sm text-red-400 font-medium" x-text="form.error"></p>
          </div>

          <button
            type="submit"
            :disabled="form.submitting || serverStatus !== 'connected'"
            class="w-full px-4 py-3 bg-blue-600 hover:bg-blue-700 disabled:opacity-50 text-white font-bold rounded-lg transition shadow-lg flex justify-center items-center"
          >
            <span x-show="!form.submitting">Iniciar Sesi√≥n</span>
            <span x-show="form.submitting" class="flex items-center gap-2">
                <svg class="animate-spin h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Validando...
            </span>
          </button>
        </form>

        <div class="mt-6 text-center text-xs text-slate-500">
          <p>WorkChain v1.0.0 | Enterprise Secure Login</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { api } from '../lib/api-client';
  import { STORAGE_KEYS, DB_TABLES } from '../lib/constants';

  // --- SOLUCI√ìN DE ERRORES TYPESCRIPT ---
  declare global {
    interface Window {
      Alpine: any;
    }
  }

  // Esperamos a que Alpine est√© disponible
  document.addEventListener('alpine:init', () => {
    
    // Verificamos que Alpine exista antes de registrar el componente
    if (!window.Alpine) {
        console.error("‚ùå AlpineJS no est√° cargado. Ejecuta 'npx astro add alpinejs'");
        return;
    }

    window.Alpine.data('loginForm', () => ({
      serverStatus: 'checking', // Estados: 'checking', 'connected', 'error'
      
      // Tipado expl√≠cito para evitar error 'never[]'
      organizations: [] as any[], 
      
      form: {
        email: '',
        password: '',
        tenantId: '',
        submitting: false,
        error: '',
      },

      async init() {
        console.log('üöÄ Iniciando componente Login...');
        await this.checkConnection();
      },

      async checkConnection() {
        this.serverStatus = 'checking';
        this.form.error = '';

        // Delay de 1.5s para asegurar que el usuario vea el mensaje de carga
        const minLoadingTime = new Promise(resolve => setTimeout(resolve, 1500));
        
        try {
            console.log('üì° Conectando a Supabase...');
            const dataFetch = api.get(DB_TABLES.TENANTS, {
                select: 'id, name',
                orderBy: { column: 'name', ascending: true }
            });

            // Promise.all fuerza a esperar AMBOS: la carga de datos Y el tiempo m√≠nimo
            const [_, response] = await Promise.all([minLoadingTime, dataFetch]);
            
            if (response.data) {
                this.organizations = response.data;
                this.serverStatus = 'connected';
                console.log('‚úÖ Conectado. Organizaciones:', this.organizations);
            } else {
                throw new Error('No data received');
            }

        } catch (error) {
            console.error('‚ùå Error de conexi√≥n:', error);
            // Si falla muy r√°pido, esperamos a que termine el tiempo m√≠nimo
            await minLoadingTime;
            this.serverStatus = 'error';
        }
      },

      async submit() {
        this.form.submitting = true;
        this.form.error = '';

        try {
          const data = await api.login(this.form.email, this.form.password);

          if (data.session) {
            const userData = {
                id: data.user.id,
                email: data.user.email,
                tenant_id: this.form.tenantId,
                role: 'user', 
                last_login: new Date().toISOString()
            };

            sessionStorage.setItem(STORAGE_KEYS.AUTH_TOKEN, data.session.access_token);
            sessionStorage.setItem(STORAGE_KEYS.REFRESH_TOKEN, data.session.refresh_token);
            sessionStorage.setItem(STORAGE_KEYS.USER_DATA, JSON.stringify(userData));
            sessionStorage.setItem(STORAGE_KEYS.CURRENT_TENANT, this.form.tenantId);
            
            if(window.Alpine.store('app')) {
                window.Alpine.store('app').setUser(userData);
            }
            
            window.location.href = '/dashboard';
          }
        } catch (error) {
          console.error('Login error:', error);
          // @ts-ignore
          this.form.error = 'Credenciales incorrectas.';
        } finally {
          this.form.submitting = false;
        }
      }
    }));
  });
</script>