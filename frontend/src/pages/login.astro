---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - WorkChain ERP">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div x-data="loginForm" class="bg-slate-800 border border-slate-700 rounded-lg shadow-2xl p-8">
        
        <div class="text-center mb-8">
          <div class="mb-4">
            <svg class="w-16 h-16 mx-auto text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white mb-2">WorkChain ERP</h1>
          <p class="text-slate-400">Sistema de Gesti√≥n Empresarial</p>
        </div>

        <div class="mb-6">
            
            <div x-show="serverStatus === 'checking'" class="p-3 bg-blue-500 bg-opacity-10 border border-blue-500 rounded-lg flex items-center gap-3">
                <svg class="animate-spin h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <div class="text-sm text-blue-300">
                    <p class="font-bold">Conectando con base de datos...</p>
                    <p class="text-xs opacity-75">Sincronizando con Supabase...</p>
                </div>
            </div>

            <div x-show="serverStatus === 'error'" style="display: none;" class="p-3 bg-red-500 bg-opacity-10 border border-red-500 rounded-lg">
                <div class="flex items-center gap-3 mb-2">
                    <svg class="w-5 h-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <span class="text-sm text-red-400 font-bold">No se pudo conectar</span>
                </div>
                <p class="text-xs text-red-300 mb-3">El servidor no responde o no hay internet. Verifica tu conexi√≥n.</p>
                <button @click="loadTenants()" class="w-full py-1 px-3 bg-red-600 hover:bg-red-700 text-white text-xs rounded transition">
                    Reintentar Conexi√≥n
                </button>
            </div>

             <div x-show="serverStatus === 'connected'" style="display: none;" class="p-2 bg-green-500 bg-opacity-10 border border-green-500 rounded-lg text-center mb-4">
                <p class="text-xs text-green-400 font-bold">‚úÖ Sistema Online</p>
            </div>
        </div>

        <form @submit.prevent="submit" class="space-y-4">
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Organizaci√≥n</label>
            <select
              x-model="form.tenantId"
              :disabled="serverStatus !== 'connected'"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-blue-500 transition disabled:opacity-50 disabled:cursor-not-allowed"
              required
            >
              <option value="" disabled>Selecciona una organizaci√≥n</option>
              <template x-for="org in organizations" :key="org.id">
                <option :value="org.id" x-text="org.name"></option>
              </template>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Correo Electr√≥nico</label>
            <input
              type="email"
              x-model="form.email"
              :disabled="serverStatus !== 'connected'"
              placeholder="usuario@example.com"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition disabled:opacity-50"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Contrase√±a</label>
            <input
              type="password"
              x-model="form.password"
              :disabled="serverStatus !== 'connected'"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition disabled:opacity-50"
              required
            />
          </div>

          <div x-show="form.error" style="display: none;" class="p-3 bg-red-500 bg-opacity-10 border border-red-500 rounded-lg text-red-400 text-sm">
            <p x-text="form.error"></p>
          </div>

          <button
            type="submit"
            :disabled="form.submitting || serverStatus !== 'connected'"
            class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed text-white font-medium rounded-lg transition"
          >
            <span x-show="!form.submitting">Iniciar Sesi√≥n</span>
            <span x-show="form.submitting">Cargando...</span>
          </button>
        </form>

        <div class="mt-6 text-center text-sm text-slate-400">
          <p>Versi√≥n 1.0.0 | Enterprise Edition</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // IMPORTACIONES: Usamos la nueva estructura robusta
  import { api } from '../lib/api-client';
  import { STORAGE_KEYS, DB_TABLES } from '../lib/constants';

  declare global {
    interface Window {
      Alpine: any;
    }
  }

  document.addEventListener('alpine:init', () => {
    window.Alpine.data('loginForm', () => ({
      // Estados posibles: 'checking' | 'connected' | 'error'
      serverStatus: 'checking', 
      
      form: {
        email: '',
        password: '',
        tenantId: '',
        submitting: false,
        error: '',
      },
      organizations: [] as { id: string; name: string }[],

      async init() {
        // Al iniciar, mostramos "Conectando..." y cargamos datos
        this.serverStatus = 'checking';
        console.log('üöÄ Iniciando Login (Modo Supabase Direct)...');
        await this.loadTenants();
      },

      async loadTenants() {
        this.serverStatus = 'checking'; 
        
        try {
          // api.get usa el sistema de reintentos autom√°tico
          // Si falla 3 veces, lanzar√° error y caeremos en el catch
          const result = await api.get(DB_TABLES.TENANTS, {
            select: 'id, name',
            orderBy: { column: 'name', ascending: true }
          });

          // Si llega aqu√≠, es que hay conexi√≥n exitosa
          this.organizations = result.data || [];
          
          // Peque√±o delay visual para que no sea un parpadeo instant√°neo
          setTimeout(() => {
              this.serverStatus = 'connected';
          }, 300);

        } catch (error: any) {
          console.error('‚ùå Error Cr√≠tico de Conexi√≥n:', error);
          this.serverStatus = 'error'; // Esto activa la caja roja en el HTML
        }
      },

      async submit() {
        this.form.error = '';
        this.form.submitting = true;

        try {
          // Login usando el cliente unificado
          const data = await api.login(this.form.email, this.form.password);

          if (data.session) {
            console.log('‚úÖ Login exitoso:', data.user);
            
            // Objeto de usuario seguro
            const userData = {
                id: data.user.id,
                email: data.user.email,
                tenant_id: this.form.tenantId,
                role: 'user', 
                last_login: new Date().toISOString()
            };

            // Guardar sesi√≥n usando las constantes para evitar errores
            sessionStorage.setItem(STORAGE_KEYS.AUTH_TOKEN, data.session.access_token);
            sessionStorage.setItem(STORAGE_KEYS.REFRESH_TOKEN, data.session.refresh_token);
            sessionStorage.setItem(STORAGE_KEYS.USER_DATA, JSON.stringify(userData));
            sessionStorage.setItem(STORAGE_KEYS.CURRENT_TENANT, this.form.tenantId);
            
            // Sincronizar con Alpine Store global (si existe)
            // @ts-ignore
            if(window.Alpine.store('app')) {
                // @ts-ignore
                window.Alpine.store('app').setUser(userData);
            }
            
            // Redirigir al dashboard
            window.location.href = '/dashboard';
          }
        } catch (error: any) {
          console.error('Login error:', error);
          // Mostrar mensaje de error amigable al usuario
          this.form.error = error.message || 'Credenciales incorrectas o error de servidor.';
        } finally {
          this.form.submitting = false;
        }
      }
    }));
  });
</script>