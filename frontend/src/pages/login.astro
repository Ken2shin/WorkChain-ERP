---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - WorkChain ERP">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-2xl p-8">
        <div class="text-center mb-8">
          <div class="mb-4">
            <svg class="w-16 h-16 mx-auto text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white mb-2">WorkChain ERP</h1>
          <p class="text-slate-400">Sistema de Gestión Empresarial</p>
        </div>

        <form x-data="loginForm" @submit.prevent="submit" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Organización</label>
            <select
              x-model="form.tenantId"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-blue-500 transition"
              required
            >
              <option value="" disabled>Selecciona una organización</option>
              <template x-for="org in organizations" :key="org.id">
                <option :value="org.id" x-text="org.name"></option>
              </template>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Correo Electrónico</label>
            <input
              type="email"
              x-model="form.email"
              placeholder="usuario@example.com"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Contraseña</label>
            <input
              type="password"
              x-model="form.password"
              placeholder="••••••••"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition"
              required
            />
          </div>

          <div x-show="form.error" style="display: none;" class="p-3 bg-red-500 bg-opacity-10 border border-red-500 rounded-lg text-red-400 text-sm">
            <p x-text="form.error"></p>
          </div>

          <button
            type="submit"
            :disabled="form.submitting"
            class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:opacity-50 text-white font-medium rounded-lg transition"
          >
            <span x-show="!form.submitting">Iniciar Sesión</span>
            <span x-show="form.submitting">Cargando...</span>
          </button>
        </form>

        <div class="mt-6 text-center text-sm text-slate-400">
          <p>Versión 1.0.0 | Enterprise Edition</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { getApiBaseUrl } from '../lib/alpine-store';

  // Declaración global para Alpine
  declare global {
    interface Window {
      Alpine: any;
    }
  }

  document.addEventListener('alpine:init', () => {
    window.Alpine.data('loginForm', () => ({
      form: {
        email: '',
        password: '',
        tenantId: '',
        submitting: false,
        error: '',
      },
      organizations: [] as { id: string; name: string }[],

      async init() {
        await this.loadTenants();
      },

      async loadTenants() {
        try {
          const baseUrl = getApiBaseUrl();
          const response = await fetch(`${baseUrl}/tenants`);
          
          if (response.ok) {
            const data = await response.json();
            // Mapeo seguro para evitar errores de tipo
            this.organizations = (data.data || []).map((t: any) => ({
              id: String(t.id),
              name: t.name
            }));
          }
        } catch (error) {
          console.error('Error cargando organizaciones', error);
        }
      },

      async submit() {
        this.form.error = '';
        this.form.submitting = true;

        try {
          const baseUrl = getApiBaseUrl();
          const response = await fetch(`${baseUrl}/auth/login`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              email: this.form.email,
              password: this.form.password,
              tenant_id: this.form.tenantId
            })
          });

          const data = await response.json();

          if (response.ok) {
            sessionStorage.setItem('access_token', data.data.access_token);
            sessionStorage.setItem('user', JSON.stringify(data.data.user));
            // @ts-ignore
            window.Alpine.store('app').setUser(data.data.user);
            window.location.href = '/dashboard';
          } else {
            this.form.error = data.message || 'Error de autenticación';
          }
        } catch (error) {
          this.form.error = 'Error de conexión con el servidor';
        } finally {
          this.form.submitting = false;
        }
      }
    }));
  });
</script>