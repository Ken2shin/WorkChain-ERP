---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - WorkChain ERP">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-2xl p-8">
        <div class="text-center mb-8">
          <div class="mb-4">
            <svg class="w-16 h-16 mx-auto text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white mb-2">WorkChain ERP</h1>
          <p class="text-slate-400">Sistema de Gestión Empresarial</p>
        </div>

        <form x-data="loginForm()" @submit.prevent="submit()" class="space-y-4">
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Organización</label>
            <select
              x-model="form.tenantId"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-blue-500 transition"
              required
            >
              <option value="" disabled>Selecciona una organización</option>
              <template x-for="org in organizations" :key="org.id">
                <option :value="org.id" x-text="org.name"></option>
              </template>
            </select>
            <template x-if="organizationsError">
              <p class="mt-1 text-sm text-red-400" x-text="organizationsError"></p>
            </template>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Correo Electrónico</label>
            <input
              type="email"
              x-model="form.email"
              placeholder="usuario@example.com"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Contraseña</label>
            <input
              type="password"
              x-model="form.password"
              placeholder="••••••••"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition"
              required
            />
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              x-model="form.remember"
              class="w-4 h-4 bg-slate-700 border-slate-600 rounded focus:ring-blue-500"
            />
            <label for="remember" class="ml-2 text-sm text-slate-400">Recuérdame</label>
          </div>

          <template x-if="form.error">
            <div class="p-3 bg-red-500 bg-opacity-10 border border-red-500 rounded-lg text-red-400 text-sm">
              <p x-text="form.error"></p>
            </div>
          </template>

          <button
            type="submit"
            :disabled="form.submitting"
            class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:opacity-50 text-white font-medium rounded-lg transition flex justify-center items-center"
          >
            <span x-show="!form.submitting">Iniciar Sesión</span>
            <span x-show="form.submitting" class="flex items-center gap-2">
              <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Cargando...
            </span>
          </button>
        </form>

        <div class="mt-6 text-center text-sm text-slate-400">
          <p>Versión 1.0.0 | Kaze-Quantum Secure</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  // Importaciones corregidas
  // Asumimos que supabase.ts exporta supabase client
  import { supabase } from '../lib/supabase';
  import { fetchApi } from '../lib/alpine-store';

  // CORRECCIÓN 1: Definir tipos globales para Alpine
  declare global {
    interface Window {
      Alpine: any;
      loginForm?: () => LoginFormState;
    }
  }

  // CORRECCIÓN 2: Interfaz completa incluyendo 'init'
  interface LoginFormState {
    form: {
      email: string;
      password: string;
      remember: boolean;
      tenantId: string;
      submitting: boolean;
      error: string;
    };
    organizations: Array<{ id: string; name: string }>;
    organizationsError: string;
    connectionStatus: 'loading' | 'connected' | 'error';
    submit: () => Promise<void>;
    loadTenants: () => Promise<void>;
    init: () => Promise<void>; // Agregado para satisfacer la llamada automática de Alpine
  }

  window.loginForm = function loginForm(): LoginFormState {
    return {
      form: {
        email: '',
        password: '',
        remember: false,
        tenantId: '',
        submitting: false,
        error: '',
      },
      // CORRECCIÓN 3: Tipado explícito de array vacío para evitar error 'never[]'
      organizations: [] as { id: string; name: string }[],
      organizationsError: '',
      connectionStatus: 'loading',

      async loadTenants() {
        try {
          this.connectionStatus = 'loading';
          this.organizationsError = '';

          // Consulta directa a Supabase (PostgreSQL)
          const { data, error } = await supabase
            .from('tenants')
            .select('id, name')
            .order('name');

          if (error) throw error;

          if (!data || data.length === 0) {
            this.organizationsError = 'No hay organizaciones disponibles.';
            this.connectionStatus = 'error';
            return;
          }

          this.organizations = data;
          this.connectionStatus = 'connected';
        } catch (error: any) {
          this.connectionStatus = 'error';
          this.organizationsError = error.message || 'Error cargando organizaciones';
          console.error('[Login] Error tenants:', error);
        }
      },

      async submit() {
        this.form.error = '';
        this.form.submitting = true;

        try {
          if (!this.form.email || !this.form.password || !this.form.tenantId) {
            this.form.error = 'Completa todos los campos.';
            return;
          }

          // Uso de fetchApi SEGURO (envía credentials: 'include' automáticamente)
          // El backend debe establecer la cookie HttpOnly en la respuesta.
          const response = await fetchApi('/auth/login', {
            method: 'POST',
            body: JSON.stringify({
              email: this.form.email,
              password: this.form.password,
              tenant_id: this.form.tenantId,
              remember: this.form.remember
            })
          });

          if (!response.ok) {
            const data = await response.json().catch(() => ({}));
            throw new Error(data.message || 'Credenciales inválidas');
          }

          // ÉXITO: No guardamos nada en localStorage.
          // Actualizamos el estado global en RAM y redirigimos.
          if (window.Alpine) {
            // Forzamos al store a verificar la sesión (leyendo la nueva cookie)
            await window.Alpine.store('app').checkSession();
          }

          window.location.href = '/dashboard';

        } catch (error: any) {
          this.form.error = error.message || 'Error de conexión';
        } finally {
          this.form.submitting = false;
        }
      },

      async init() {
        await this.loadTenants();
      }
    };
  };
</script>

<style>
  :global(body) {
    @apply overflow-hidden;
  }
</style>