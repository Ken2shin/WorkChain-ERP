---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - WorkChain ERP">
  <div class="min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-slate-800 border border-slate-700 rounded-lg shadow-2xl p-8">
        
        <div class="text-center mb-8">
          <div class="mb-4">
            <svg class="w-16 h-16 mx-auto text-blue-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-white mb-2">WorkChain ERP</h1>
          <p class="text-slate-400">Sistema de Gesti√≥n Empresarial</p>
        </div>

        <form x-data="loginForm" @submit.prevent="submit" class="space-y-4">
          
          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Organizaci√≥n</label>
            <select
              x-model="form.tenantId"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white focus:outline-none focus:border-blue-500 transition"
              required
            >
              <option value="" disabled>Selecciona una organizaci√≥n</option>
              <template x-for="org in organizations" :key="org.id">
                <option :value="org.id" x-text="org.name"></option>
              </template>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Correo Electr√≥nico</label>
            <input
              type="email"
              x-model="form.email"
              placeholder="usuario@example.com"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-slate-300 mb-2">Contrase√±a</label>
            <input
              type="password"
              x-model="form.password"
              placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
              class="w-full px-4 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 transition"
              required
            />
          </div>

          <div x-show="form.error" style="display: none;" class="p-3 bg-red-500 bg-opacity-10 border border-red-500 rounded-lg text-red-400 text-sm">
            <p x-text="form.error"></p>
          </div>

          <button
            type="submit"
            :disabled="form.submitting"
            class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 disabled:opacity-50 text-white font-medium rounded-lg transition"
          >
            <span x-show="!form.submitting">Iniciar Sesi√≥n</span>
            <span x-show="form.submitting">Cargando...</span>
          </button>
        </form>

        <div class="mt-6 text-center text-sm text-slate-400">
          <p>Versi√≥n 1.0.0 | Enterprise Edition</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { getApiBaseUrl } from '../lib/alpine-store';

  declare global {
    interface Window {
      Alpine: any;
    }
  }

  document.addEventListener('alpine:init', () => {
    window.Alpine.data('loginForm', () => ({
      form: {
        email: '',
        password: '',
        tenantId: '',
        submitting: false,
        error: '',
      },
      organizations: [] as { id: string; name: string }[],

      async init() {
        console.log('%cüöÄ INICIANDO LOGIN FORM', 'color: cyan; font-weight: bold;');
        await this.loadTenants();
      },

      async loadTenants() {
        try {
          const baseUrl = getApiBaseUrl();
          const targetUrl = `${baseUrl}/tenants`;
          
          console.log(`%cüì° CONECTANDO AL BACKEND...`, 'color: yellow;');
          console.log(`URL Objetivo: ${targetUrl}`);

          const response = await fetch(targetUrl);
          
          console.log(`%cüì• RESPUESTA RECIBIDA`, 'color: green;');
          console.log(`Status HTTP: ${response.status}`);

          if (response.ok) {
            const result = await response.json();
            
            // --- AQU√ç EST√Å LA CLAVE: VER QU√â LLEGA REALMENTE ---
            console.log('%cüì¶ DATOS CRUDOS DEL BACKEND:', 'background: #222; color: #bada55', result);
            
            // L√≥gica para detectar la estructura de la respuesta
            const list = result.data || result.tenants || result || [];
            
            console.log('üìã Lista interpretada por el frontend:', list);
            
            if (Array.isArray(list)) {
                console.log(`‚úÖ Se encontraron ${list.length} organizaciones.`);
            } else {
                console.error('‚ùå ERROR: La lista interpretada NO es un array. Es:', typeof list);
            }

            this.organizations = list.map((t: any) => ({
              id: String(t.id),
              name: t.name
            }));
            
            console.log('‚úÖ Organizations final en Alpine:', JSON.parse(JSON.stringify(this.organizations)));

          } else {
            console.error('‚ùå ERROR HTTP: El backend respondi√≥ con error.');
            console.log('Status Text:', response.statusText);
          }
        } catch (error) {
          console.error('%c‚ùå ERROR CR√çTICO DE CONEXI√ìN', 'color: red; font-size: 14px;');
          console.error('No se recibi√≥ NADA del backend o la URL est√° mal.', error);
        }
      },

      async submit() {
        this.form.error = '';
        this.form.submitting = true;

        try {
          const baseUrl = getApiBaseUrl();
          console.log('üöÄ Enviando credenciales...');
          
          const response = await fetch(`${baseUrl}/auth/login`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              email: this.form.email,
              password: this.form.password,
              tenant_id: this.form.tenantId
            })
          });

          const data = await response.json();
          console.log('üì• Respuesta Login:', data);

          if (response.ok) {
            const authData = data.data || data;
            
            sessionStorage.setItem('access_token', authData.access_token);
            if(authData.user) {
              sessionStorage.setItem('user', JSON.stringify(authData.user));
              // @ts-ignore
              if(window.Alpine.store('app')) {
                 // @ts-ignore
                 window.Alpine.store('app').setUser(authData.user);
              }
            }
            
            window.location.href = '/dashboard';
          } else {
            this.form.error = data.message || 'Error de autenticaci√≥n';
            console.warn('‚ö†Ô∏è Login fallido:', this.form.error);
          }
        } catch (error) {
          console.error('‚ùå Error de red en Login:', error);
          this.form.error = 'Error de conexi√≥n con el servidor';
        } finally {
          this.form.submitting = false;
        }
      }
    }));
  });
</script>