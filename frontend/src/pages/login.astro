---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Login">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
    <div class="w-full max-w-md">
      <div class="bg-white rounded-xl shadow-lg p-8" x-data="loginForm()">
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-blue-600">WorkChain</h1>
          <p class="text-gray-500 text-sm mt-2">Professional ERP for SMEs</p>
        </div>

        <form @submit.prevent="submit" class="space-y-4">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
              Email Address
            </label>
            <input
              type="email"
              id="email"
              x-model="form.email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="admin@example.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
              Password
            </label>
            <input
              type="password"
              id="password"
              x-model="form.password"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="••••••••"
            />
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              x-model="form.remember"
              class="w-4 h-4 text-blue-600 rounded"
            />
            <label for="remember" class="ml-2 text-sm text-gray-600">
              Remember me
            </label>
          </div>

          <button
            type="submit"
            :disabled="submitting"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 rounded-lg transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <span x-show="!submitting">Sign In</span>
            <span x-show="submitting" class="inline-flex items-center">
              <svg class="animate-spin -ml-1 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor"
                  d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                ></path>
              </svg>
              Signing in...
            </span>
          </button>

          <div x-show="error" class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg text-sm" x-text="error" style="display: none;"></div>
        </form>

        <div class="mt-6 pt-6 border-t border-gray-200 text-center">
          <p class="text-sm text-gray-600">
            Don't have an account?
            <a href="/register" class="text-blue-600 hover:text-blue-700 font-medium">
              Sign up
            </a>
          </p>
        </div>
      </div>
    </div>
  </div>

  <script>
    import { secureApiCall } from '../lib/api-client';
    import { sanitizeErrorMessage } from '../lib/security-validator';

    // 1. SOLUCIÓN AL ERROR: Extendemos la interfaz Window para incluir loginForm
    declare global {
        interface Window {
            loginForm: () => any;
        }
    }

    // 2. Definimos la interfaz de respuesta
    interface LoginResponse {
        access_token: string;
        refresh_token?: string;
        user?: any;
    }
    
    // Hacemos la función disponible globalmente para AlpineJS
    // Ahora TypeScript ya sabe que loginForm es una propiedad válida de window
    window.loginForm = function() {
      return {
        form: {
          email: '',
          password: '',
          remember: false,
        },
        submitting: false,
        error: '',

        async submit() {
          this.error = '';
          this.submitting = true;

          try {
            const response = await secureApiCall<LoginResponse>('/auth/login', {
              method: 'POST',
              body: JSON.stringify({
                email: this.form.email,
                password: this.form.password,
                remember: this.form.remember,
              }),
            });

            if (response && response.access_token) {
              // Store tokens securely
              localStorage.setItem('auth_token', response.access_token);
              if (response.refresh_token) {
                localStorage.setItem('refresh_token', response.refresh_token);
              }
              
              // Redirect to dashboard
              window.location.href = '/dashboard';
            } else {
              this.error = 'Login failed. Please try again.';
            }
          } catch (err) {
            const errorMsg = err instanceof Error ? err.message : 'Connection error';
            this.error = sanitizeErrorMessage(errorMsg) || 'Authentication failed. Please try again.';
            console.error('[v0] Login error (sanitized):', errorMsg);
          } finally {
            this.submitting = false;
          }
        },
      };
    }
  </script>
</Layout>