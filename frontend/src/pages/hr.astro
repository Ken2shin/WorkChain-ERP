---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Human Resources">
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-30 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Human Resources</h1>
          <p class="text-gray-500 text-sm">Manage employees, departments and attendance</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm transition-colors">
          Back to Dashboard
        </a>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" x-data="hrStats()">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
          <p class="text-gray-600 text-sm font-medium">Total Employees</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.totalEmployees || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Active staff</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <p class="text-gray-600 text-sm font-medium">Present Today</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.presentToday || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Current attendance</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-yellow-500">
          <p class="text-gray-600 text-sm font-medium">On Leave</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.onLeave || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Absence today</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-red-500">
          <p class="text-gray-600 text-sm font-medium">Departments</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.totalDepartments || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Organizational units</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden mb-8" x-data="employeesTable()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Employee Directory</h2>
          <p class="text-sm text-gray-500 mt-1">All staff members from database</p>
        </div>

        <div x-show="loading" class="p-12 text-center">
          <div class="inline-block">
            <div class="animate-spin h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full"></div>
            <p class="text-gray-500 mt-4">Loading employees...</p>
          </div>
        </div>

        <div x-show="error && !loading" class="p-6 bg-red-50 border-l-4 border-red-500" style="display: none;">
          <p class="text-red-800 font-medium" x-text="error"></p>
        </div>

        <div x-show="!loading && !error" class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Name</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Department</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Position</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Email</th>
                <th class="px-6 py-3 text-center text-sm font-medium text-gray-700">Status</th>
              </tr>
            </thead>
            <tbody>
              <template x-for="employee in employees" :key="employee.id">
                <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-sm text-gray-900 font-medium" x-text="employee.name"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="employee.department?.name || 'N/A'"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="employee.position || 'N/A'"></td>
                  <td class="px-6 py-4 text-sm text-gray-500" x-text="employee.email"></td>
                  <td class="px-6 py-4 text-center">
                    <template x-if="employee.status === 'active'">
                      <span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Active</span>
                    </template>
                    <template x-if="employee.status === 'inactive'">
                      <span class="inline-block px-3 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Inactive</span>
                    </template>
                    <template x-if="employee.status === 'leave'">
                      <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 text-xs font-medium rounded-full">On Leave</span>
                    </template>
                  </td>
                </tr>
              </template>

              <template x-if="employees.length === 0 && !loading && !error">
                <tr>
                  <td colspan="5" class="px-6 py-12 text-center">
                    <p class="text-gray-500">No employees registered. Create your first employee.</p>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden" x-data="departmentsList()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Departments</h2>
          <p class="text-sm text-gray-500 mt-1">Organizational structure</p>
        </div>

        <div x-show="loading" class="p-12 text-center">
          <div class="animate-spin h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full mx-auto"></div>
        </div>

        <div x-show="!loading" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6">
          <template x-for="dept in departments" :key="dept.id">
            <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 transition-colors">
              <h3 class="font-semibold text-gray-900" x-text="dept.name"></h3>
              <p class="text-sm text-gray-600 mt-1" x-text="`Manager: ${dept.manager_name || 'Unassigned'}`"></p>
              <div class="mt-4 flex items-center justify-between pt-4 border-t border-gray-100">
                <span class="text-sm text-gray-500">Employees</span>
                <span class="font-bold text-gray-900" x-text="dept.employee_count || 0"></span>
              </div>
            </div>
          </template>

          <template x-if="departments.length === 0 && !loading">
            <div class="col-span-full text-center py-8">
              <p class="text-gray-500">No departments configured.</p>
            </div>
          </template>
        </div>
      </div>

    </main>
  </div>

  <script>
    // 1. Declaración para silenciar errores de TS sobre Alpine
    declare const Alpine: any;

    function hrStats() {
      return {
        stats: {
          totalEmployees: 0,
          presentToday: 0,
          onLeave: 0,
          totalDepartments: 0,
        },
        loading: true,

        async init() {
          await this.loadStats();
        },

        async loadStats() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            // Casting seguro de API_BASE
            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/hr/stats', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const data = await response.json();
            if (data.success) {
              this.stats = data.data || this.stats;
            }
          } catch (err) {
            console.error('[v0] HR stats error:', err);
          } finally {
            this.loading = false;
          }
        },
      };
    }

    function employeesTable() {
      return {
        // 2. Tipado explícito para array
        employees: [] as any[],
        loading: true,
        // 3. Tipado explícito para error (puede ser string o null)
        error: null as string | null,

        async init() {
          await this.loadEmployees();
        },

        async loadEmployees() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/hr/employees', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) {
              if (response.status === 401) window.location.href = '/login';
              throw new Error(`HTTP ${response.status}`);
            }

            const data = await response.json();
            if (data.success) {
              this.employees = data.data || [];
            }
          } catch (err) {
            console.error('[v0] Employees loading error:', err);
            this.error = 'Failed to load employees';
          } finally {
            this.loading = false;
          }
        },
      };
    }

    function departmentsList() {
      return {
        // 4. Tipado explícito para array
        departments: [] as any[],
        loading: true,

        async init() {
          await this.loadDepartments();
        },

        async loadDepartments() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/hr/departments', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const data = await response.json();
            if (data.success) {
              this.departments = data.data || [];
            }
          } catch (err) {
            console.error('[v0] Departments loading error:', err);
          } finally {
            this.loading = false;
          }
        },
      };
    }

    // Initialize
    document.addEventListener('alpine:init', () => {
      // Verificación segura del store antes de inicializar componentes
      const appStore = Alpine.store('app');
      if (appStore && appStore.authenticated) {
        const stats = hrStats();
        const employees = employeesTable();
        const departments = departmentsList();
        
        // Inicializar componentes manualmente si es necesario
        stats.init();
        employees.init();
        departments.init();

        Alpine.data('hrStats', () => stats);
        Alpine.data('employeesTable', () => employees);
        Alpine.data('departmentsList', () => departments);
      } else {
        // Redirigir si no hay sesión
        window.location.href = '/login';
      }
    });
  </script>
</Layout>