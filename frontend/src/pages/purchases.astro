---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Purchases Management">
  <div class="min-h-screen bg-slate-900 text-white">
    <nav class="bg-slate-800 border-b border-slate-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
        <div>
          <h1 class="text-2xl font-bold">Purchases Management</h1>
          <p class="text-slate-400 text-sm">ðŸ›’ Suppliers, POs & requisitions</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg">Back</a>
      </div>
    </nav>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-purple-500 hover:bg-purple-600 rounded-xl p-6 transition-colors cursor-pointer">
          <h3 class="text-xl font-bold mb-2">Suppliers</h3>
          <p class="text-sm opacity-90">Manage suppliers</p>
        </div>
        <div class="bg-blue-500 hover:bg-blue-600 rounded-xl p-6 transition-colors cursor-pointer">
          <h3 class="text-xl font-bold mb-2">Purchase Orders</h3>
          <p class="text-sm opacity-90">PO tracking</p>
        </div>
        <div class="bg-indigo-500 hover:bg-indigo-600 rounded-xl p-6 transition-colors cursor-pointer">
          <h3 class="text-xl font-bold mb-2">Requisitions</h3>
          <p class="text-sm opacity-90">Purchase requisitions</p>
        </div>
      </div>
      <div class="bg-slate-800 border border-slate-700 rounded-xl p-8">
        <h2 class="text-2xl font-bold mb-6">Active Purchase Orders</h2>
        <div class="space-y-4">
          <div class="flex justify-between items-center p-4 bg-slate-700/50 rounded-lg">
            <div>
              <p class="font-bold">PO #PO-2024-001</p>
              <p class="text-slate-400 text-sm">Supplier: Global Parts Ltd</p>
            </div>
            <div class="text-right">
              <p class="font-bold text-blue-400">$32,500.00</p>
              <span class="inline-block px-3 py-1 bg-blue-500/20 text-blue-300 rounded-full text-xs">In Transit</span>
            </div>
          </div>
          <div class="flex justify-between items-center p-4 bg-slate-700/50 rounded-lg">
            <div>
              <p class="font-bold">PO #PO-2024-002</p>
              <p class="text-slate-400 text-sm">Supplier: TechSupply Co</p>
            </div>
            <div class="text-right">
              <p class="font-bold text-purple-400">$18,750.00</p>
              <span class="inline-block px-3 py-1 bg-purple-500/20 text-purple-300 rounded-full text-xs">Pending</span>
            </div>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mt-12">
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Active Suppliers</p>
          <p class="text-3xl font-bold text-purple-400">42</p>
        </div>
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Total POs</p>
          <p class="text-3xl font-bold text-blue-400">234</p>
        </div>
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Pending Orders</p>
          <p class="text-3xl font-bold text-yellow-400">12</p>
        </div>
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">YTD Spending</p>
          <p class="text-3xl font-bold text-orange-400">$1.2M</p>
        </div>
      </div>
    </main>
  </div>

  <script define:vars={{ apiBase: import.meta.env.PUBLIC_API_BASE || 'http://localhost:8000/api' }}>
    function moduleState() {
      return {
        async init() {
          await this.verifySession();
        },
        async verifySession() {
          try {
            const response = await fetch(apiBase + '/auth/me', {
              credentials: 'include',
              headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (response.status === 401 || response.status === 403) {
              window.location.href = '/login';
            }
          } catch (err) {
            console.error('[v0] Session check failed:', err);
            window.location.href = '/login';
          }
        }
      };
    }
    document.addEventListener('DOMContentLoaded', async () => {
      const state = moduleState();
      await state.init();
    });
  </script>
</Layout>
