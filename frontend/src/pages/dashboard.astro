---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Dashboard">
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-40 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center gap-8">
            <h1 class="text-2xl font-bold text-blue-600">WorkChain ERP</h1>
          </div>
          <div class="flex items-center gap-4" x-data="{ menu: false }">
            <div class="text-right">
              <p class="text-sm font-medium text-gray-900" x-text="$store.app.user?.name || 'User'"></p>
              <p class="text-xs text-gray-500" x-text="$store.app.user?.role || 'Employee'"></p>
            </div>
            <button @click="menu = !menu" class="p-2 rounded-full hover:bg-gray-100">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
            <div x-show="menu" @click.outside="menu = false" class="absolute right-0 mt-48 w-48 bg-white rounded-lg shadow-lg py-2 z-50" style="display: none;">
              <a href="/profile" class="block px-4 py-2 hover:bg-gray-100">Profile</a>
              <button @click="$store.app.logout()" class="w-full text-left px-4 py-2 text-red-600 hover:bg-gray-100">Logout</button>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900">Dashboard</h2>
        <p class="text-gray-600 mt-2">Overview of your business operations</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
          <p class="text-gray-600 text-sm font-medium">Total Products</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-data="{ count: 0 }" @load="count = $el.getAttribute('data-count')" data-count="0" x-text="count">0</p>
          <p class="text-xs text-gray-500 mt-4">Real-time inventory</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <p class="text-gray-600 text-sm font-medium">Monthly Sales</p>
          <p class="text-3xl font-bold text-gray-900 mt-2">$0.00</p>
          <p class="text-xs text-gray-500 mt-4">This month</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-orange-500">
          <p class="text-gray-600 text-sm font-medium">Pending Orders</p>
          <p class="text-3xl font-bold text-gray-900 mt-2">0</p>
          <p class="text-xs text-gray-500 mt-4">Awaiting confirmation</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
          <p class="text-gray-600 text-sm font-medium">Active Staff</p>
          <p class="text-3xl font-bold text-gray-900 mt-2">0</p>
          <p class="text-xs text-gray-500 mt-4">In your organization</p>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <a href="/inventory" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-blue-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Inventory</h3>
            <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m0 0l8 4m-8-4v10l8 4m0-10l8-4m-8 4v10l8-4M7 7h.01"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Manage products, warehouses and stock</p>
          <div class="text-blue-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/sales" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-green-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Sales</h3>
            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Orders, customers and invoices</p>
          <div class="text-green-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/purchases" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-orange-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Purchases</h3>
            <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Suppliers, POs and requisitions</p>
          <div class="text-orange-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/hr" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-purple-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">HR</h3>
            <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 12H9m6 0H9m6 0a4 4 0 11-8 0m8 0H9m-1.172 5.768A4.004 4.004 0 0112 21h4a4 4 0 01-1.172-5.768"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Employees, payroll and attendance</p>
          <div class="text-purple-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/projects" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-red-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Projects</h3>
            <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Tasks, timelines and resources</p>
          <div class="text-red-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/logistics" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-cyan-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Logistics</h3>
            <svg class="w-8 h-8 text-cyan-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Shipments, routes and tracking</p>
          <div class="text-cyan-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/finance" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-indigo-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Finance</h3>
            <svg class="w-8 h-8 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Accounts, reports and budgets</p>
          <div class="text-indigo-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>

        <a href="/documents" class="bg-white rounded-lg shadow p-6 hover:shadow-lg hover:border-gray-500 border-2 border-transparent transition-all">
          <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-900">Documents</h3>
            <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <p class="text-gray-600 text-sm">Files and compliance documents</p>
          <div class="text-gray-600 text-sm font-medium mt-4 flex items-center gap-1">Open <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg></div>
        </a>
      </div>
    </main>
  </div>

  <script>
    // FIX TYPESCRIPT: Le decimos al compilador que "Alpine" existe en la ventana global
    declare const Alpine: any;

    document.addEventListener('alpine:init', () => {
      // Verificamos que el store y el usuario existan antes de redirigir
      const appStore = Alpine.store('app');
      
      // Si no existe el store o no está autenticado, redirigir
      if (!appStore || !appStore.authenticated) {
        // Opción: descomentar si quieres forzar login
        // window.location.href = '/login';
      }
    });
  </script>
</Layout>