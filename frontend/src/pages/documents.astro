---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Document Management">
  <div class="min-h-screen bg-slate-900 text-white">
    <nav class="bg-slate-800 border-b border-slate-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
        <div>
          <h1 class="text-2xl font-bold">Document Management</h1>
          <p class="text-slate-400 text-sm">ðŸ“„ Files & compliance</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 bg-slate-700 hover:bg-slate-600 rounded-lg">Back</a>
      </div>
    </nav>
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        <div class="bg-slate-700 hover:bg-slate-600 rounded-xl p-6 transition-colors cursor-pointer">
          <h3 class="text-xl font-bold mb-2">Documents</h3>
          <p class="text-sm opacity-90">File management</p>
        </div>
        <div class="bg-slate-600 hover:bg-slate-500 rounded-xl p-6 transition-colors cursor-pointer">
          <h3 class="text-xl font-bold mb-2">Compliance</h3>
          <p class="text-sm opacity-90">Regulatory compliance</p>
        </div>
      </div>
      <div class="bg-slate-800 border border-slate-700 rounded-xl p-8">
        <h2 class="text-2xl font-bold mb-6">Recent Documents</h2>
        <div class="space-y-3">
          <div class="flex justify-between items-center p-4 bg-slate-700/50 rounded-lg hover:bg-slate-700">
            <div class="flex items-center space-x-4">
              <span class="text-3xl">ðŸ“„</span>
              <div>
                <p class="font-bold">Financial_Report_Q4_2023.pdf</p>
                <p class="text-slate-400 text-sm">Uploaded: Mar 1, 2024</p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-xs text-slate-400">2.4 MB</p>
            </div>
          </div>
          <div class="flex justify-between items-center p-4 bg-slate-700/50 rounded-lg hover:bg-slate-700">
            <div class="flex items-center space-x-4">
              <span class="text-3xl">ðŸ“‹</span>
              <div>
                <p class="font-bold">Compliance_Checklist_2024.docx</p>
                <p class="text-slate-400 text-sm">Uploaded: Feb 28, 2024</p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-xs text-slate-400">1.2 MB</p>
            </div>
          </div>
          <div class="flex justify-between items-center p-4 bg-slate-700/50 rounded-lg hover:bg-slate-700">
            <div class="flex items-center space-x-4">
              <span class="text-3xl">ðŸ“Š</span>
              <div>
                <p class="font-bold">Sales_Analysis_Feb_2024.xlsx</p>
                <p class="text-slate-400 text-sm">Uploaded: Feb 25, 2024</p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-xs text-slate-400">3.1 MB</p>
            </div>
          </div>
        </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mt-12">
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Total Documents</p>
          <p class="text-3xl font-bold text-blue-400">542</p>
        </div>
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Storage Used</p>
          <p class="text-3xl font-bold text-purple-400">28.4 GB</p>
        </div>
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Compliance Items</p>
          <p class="text-3xl font-bold text-green-400">18</p>
        </div>
        <div class="bg-slate-800 border border-slate-700 rounded-xl p-6">
          <p class="text-slate-400 text-sm mb-2">Pending Approval</p>
          <p class="text-3xl font-bold text-orange-400">5</p>
        </div>
      </div>
    </main>
  </div>

  <script define:vars={{ apiBase: import.meta.env.PUBLIC_API_BASE || 'http://localhost:8000/api' }}>
    function moduleState() {
      return {
        async init() {
          await this.verifySession();
        },
        async verifySession() {
          try {
            const response = await fetch(apiBase + '/auth/me', {
              credentials: 'include',
              headers: { 'X-Requested-With': 'XMLHttpRequest' }
            });
            if (response.status === 401 || response.status === 403) {
              window.location.href = '/login';
            }
          } catch (err) {
            console.error('[v0] Session check failed:', err);
            window.location.href = '/login';
          }
        }
      };
    }
    document.addEventListener('DOMContentLoaded', async () => {
      const state = moduleState();
      await state.init();
    });
  </script>
</Layout>
