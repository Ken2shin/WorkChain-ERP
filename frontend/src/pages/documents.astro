---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Document Management">
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-30 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Document Management</h1>
          <p class="text-gray-500 text-sm">Manage files and compliance documentation</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm transition-colors">
          Back to Dashboard
        </a>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" x-data="documentStats()">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
          <p class="text-gray-600 text-sm font-medium">Total Documents</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.total_documents || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">All documents</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
          <p class="text-gray-600 text-sm font-medium">Storage Used</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="`${stats.storage_used_mb || 0} MB`">0 MB</p>
          <p class="text-xs text-gray-500 mt-4">Total size</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <p class="text-gray-600 text-sm font-medium">Compliance Items</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.compliance_items || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Regulatory docs</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-orange-500">
          <p class="text-gray-600 text-sm font-medium">Pending Approval</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.pending_approval || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Awaiting review</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden mb-8" x-data="documentsList()">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
          <div>
            <h2 class="text-lg font-semibold text-gray-900">Documents</h2>
            <p class="text-sm text-gray-500 mt-1">All uploaded documents from database</p>
          </div>
          <button class="px-4 py-2 bg-blue-600 text-white rounded-lg text-sm hover:bg-blue-700 transition-colors">
            Upload New
          </button>
        </div>

        <div x-show="loading" class="p-12 text-center">
          <div class="inline-block">
            <div class="animate-spin h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full"></div>
            <p class="text-gray-500 mt-4">Loading documents...</p>
          </div>
        </div>

        <div x-show="error && !loading" class="p-6 bg-red-50 border-l-4 border-red-500" style="display: none;">
          <p class="text-red-800 font-medium" x-text="error"></p>
        </div>

        <div x-show="!loading && !error" class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Document Name</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Type</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Uploaded By</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Date</th>
                <th class="px-6 py-3 text-right text-sm font-medium text-gray-700">Size</th>
                <th class="px-6 py-3 text-center text-sm font-medium text-gray-700">Actions</th>
              </tr>
            </thead>
            <tbody>
              <template x-for="doc in documents" :key="doc.id">
                <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-sm text-gray-900 font-medium" x-text="doc.title"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="doc.file_type"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="doc.uploaded_by || 'System'"></td>
                  <td class="px-6 py-4 text-sm text-gray-500" x-text="formatDate(doc.created_at)"></td>
                  <td class="px-6 py-4 text-sm text-right text-gray-900 font-bold" x-text="formatFileSize(doc.file_size)"></td>
                  <td class="px-6 py-4 text-center">
                    <button @click="deleteDoc(doc.id)" class="text-red-600 hover:text-red-900 text-sm font-medium">Delete</button>
                  </td>
                </tr>
              </template>

              <template x-if="documents.length === 0 && !loading && !error">
                <tr>
                  <td colspan="6" class="px-6 py-12 text-center">
                    <p class="text-gray-500">No documents found. Start by uploading a document.</p>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>

    </main>
  </div>

  <script>
    // 1. Declaramos Alpine para que TS sepa que existe
    declare const Alpine: any;

    function documentStats() {
      return {
        stats: {
          total_documents: 0,
          storage_used_mb: 0,
          compliance_items: 0,
          pending_approval: 0,
        },
        loading: true,

        async init() {
          await this.loadStats();
        },

        async loadStats() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            // 2. Usamos (window as any) para acceder a API_BASE sin error de TS
            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/documents/stats', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const data = await response.json();
            if (data.success) {
              this.stats = data.data || this.stats;
            }
          } catch (err) {
            console.error('[v0] Document stats error:', err);
          } finally {
            this.loading = false;
          }
        },
      };
    }

    function documentsList() {
      return {
        documents: [] as any[], // Tipado explícito para evitar error de 'never'
        loading: true,
        // 3. Permitimos que error sea string o null
        error: null as string | null,

        async init() {
          await this.loadDocuments();
        },

        async loadDocuments() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/documents/list', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) {
              if (response.status === 401) window.location.href = '/login';
              throw new Error(`HTTP ${response.status}`);
            }

            const data = await response.json();
            if (data.success) {
              this.documents = data.data || [];
            }
          } catch (err) {
            console.error('[v0] Documents loading error:', err);
            this.error = 'Failed to load documents';
          } finally {
            this.loading = false;
          }
        },

        // 4. Agregamos tipos ': any' a los parámetros para silenciar errores de TS
        async deleteDoc(docId: any) {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) return;

            if (!confirm('Are you sure you want to delete this document?')) return;

            const apiBase = (window as any).API_BASE;
            const response = await fetch(`${apiBase}/v1/documents/${docId}`, {
              method: 'DELETE',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (response.ok) {
              await this.loadDocuments();
            }
          } catch (err) {
            console.error('[v0] Delete error:', err);
          }
        },

        formatDate(date: any) {
          if (!date) return '-';
          return new Date(date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });
        },

        formatFileSize(bytes: any) {
          if (!bytes) return '0 B';
          const k = 1024;
          const sizes = ['B', 'KB', 'MB', 'GB'];
          const i = Math.floor(Math.log(bytes) / Math.log(k));
          return Math.round((bytes / Math.pow(k, i)) * 100) / 100 + ' ' + sizes[i];
        },
      };
    }

    // Initialize
    document.addEventListener('alpine:init', () => {
      // Verificación segura del store antes de usarlo
      const appStore = Alpine.store('app');
      if (appStore && appStore.authenticated) {
        const stats = documentStats();
        const documents = documentsList();
        
        // Llamada manual a init si Alpine no lo hace automáticamente en este contexto
        stats.init();
        documents.init();

        Alpine.data('documentStats', () => stats);
        Alpine.data('documentsList', () => documents);
      } else {
        // Redirigir si no está autenticado
        // window.location.href = '/login'; 
      }
    });
  </script>
</Layout>