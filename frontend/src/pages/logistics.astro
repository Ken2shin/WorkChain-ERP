---
import Layout from '../layouts/Layout.astro';
---

<Layout title="WorkChain ERP - Logistics Management">
  <div class="min-h-screen bg-gray-50">
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-30 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Logistics Management</h1>
          <p class="text-gray-500 text-sm">Track shipments, routes and delivery operations</p>
        </div>
        <a href="/dashboard" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg text-sm transition-colors">
          Back to Dashboard
        </a>
      </div>
    </nav>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8" x-data="logisticsStats()">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-cyan-500">
          <p class="text-gray-600 text-sm font-medium">Total Shipments</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.total_shipments || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">All time</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <p class="text-gray-600 text-sm font-medium">In Transit</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.in_transit || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Currently moving</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
          <p class="text-gray-600 text-sm font-medium">Delivered</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="stats.delivered || '0'">0</p>
          <p class="text-xs text-gray-500 mt-4">Completed</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-orange-500">
          <p class="text-gray-600 text-sm font-medium">Avg Delivery Time</p>
          <p class="text-3xl font-bold text-gray-900 mt-2" x-text="`${stats.avg_delivery_time || 0} days`">0 days</p>
          <p class="text-xs text-gray-500 mt-4">Average duration</p>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow overflow-hidden mb-8" x-data="shipmentsList()">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-semibold text-gray-900">Recent Shipments</h2>
          <p class="text-sm text-gray-500 mt-1">Active and recent shipments from database</p>
        </div>

        <div x-show="loading" class="p-12 text-center">
          <div class="inline-block">
            <div class="animate-spin h-8 w-8 border-4 border-blue-500 border-t-transparent rounded-full"></div>
            <p class="text-gray-500 mt-4">Loading shipments...</p>
          </div>
        </div>

        <div x-show="error && !loading" class="p-6 bg-red-50 border-l-4 border-red-500" style="display: none;">
          <p class="text-red-800 font-medium" x-text="error"></p>
        </div>

        <div x-show="!loading && !error" class="overflow-x-auto">
          <table class="w-full">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Tracking #</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Origin</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Destination</th>
                <th class="px-6 py-3 text-left text-sm font-medium text-gray-700">Expected Delivery</th>
                <th class="px-6 py-3 text-center text-sm font-medium text-gray-700">Status</th>
              </tr>
            </thead>
            <tbody>
              <template x-for="shipment in shipments" :key="shipment.id">
                <tr class="border-b border-gray-200 hover:bg-gray-50 transition-colors">
                  <td class="px-6 py-4 text-sm text-gray-900 font-medium" x-text="shipment.tracking_number"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="shipment.origin"></td>
                  <td class="px-6 py-4 text-sm text-gray-600" x-text="shipment.destination"></td>
                  <td class="px-6 py-4 text-sm text-gray-500" x-text="formatDate(shipment.expected_delivery || shipment.shipped_date)"></td>
                  <td class="px-6 py-4 text-center">
                    <template x-if="shipment.status === 'pending'">
                      <span class="inline-block px-3 py-1 bg-gray-100 text-gray-800 text-xs font-medium rounded-full">Pending</span>
                    </template>
                    <template x-if="shipment.status === 'in_transit'">
                      <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">In Transit</span>
                    </template>
                    <template x-if="shipment.status === 'delivered'">
                      <span class="inline-block px-3 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Delivered</span>
                    </template>
                  </td>
                </tr>
              </template>

              <template x-if="shipments.length === 0 && !loading && !error">
                <tr>
                  <td colspan="5" class="px-6 py-12 text-center">
                    <p class="text-gray-500">No shipments found.</p>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>

    </main>
  </div>

  <script>
    // 1. Declaración global para solucionar error "Cannot find name Alpine"
    declare const Alpine: any;

    function logisticsStats() {
      return {
        stats: {
          total_shipments: 0,
          in_transit: 0,
          delivered: 0,
          avg_delivery_time: 0,
        },
        loading: true,

        async init() {
          await this.loadStats();
        },

        async loadStats() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            // Casting seguro para API_BASE
            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/logistics/stats', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) throw new Error(`HTTP ${response.status}`);

            const data = await response.json();
            if (data.success) {
              this.stats = data.data || this.stats;
            }
          } catch (err) {
            console.error('[v0] Logistics stats error:', err);
          } finally {
            this.loading = false;
          }
        },
      };
    }

    function shipmentsList() {
      return {
        // 2. Tipado explícito para arrays
        shipments: [] as any[],
        loading: true,
        // 3. Tipado explícito para error
        error: null as string | null,

        async init() {
          await this.loadShipments();
        },

        async loadShipments() {
          try {
            const token = sessionStorage.getItem('access_token');
            if (!token) {
              window.location.href = '/login';
              return;
            }

            const apiBase = (window as any).API_BASE;
            const response = await fetch(apiBase + '/v1/logistics/shipments', {
              method: 'GET',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`,
                'X-Requested-With': 'XMLHttpRequest',
              },
            });

            if (!response.ok) {
              if (response.status === 401) window.location.href = '/login';
              throw new Error(`HTTP ${response.status}`);
            }

            const data = await response.json();
            if (data.success) {
              this.shipments = data.data || [];
            }
          } catch (err) {
            console.error('[v0] Shipments loading error:', err);
            this.error = 'Failed to load shipments';
          } finally {
            this.loading = false;
          }
        },

        // 4. Tipado explícito para parámetro de fecha
        formatDate(date: any) {
          return new Date(date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
            day: 'numeric',
          });
        },
      };
    }

    // Initialize
    document.addEventListener('alpine:init', () => {
      // Verificación segura del store
      const appStore = Alpine.store('app');
      
      if (appStore && appStore.authenticated) {
        const stats = logisticsStats();
        const shipments = shipmentsList();
        
        stats.init();
        shipments.init();

        Alpine.data('logisticsStats', () => stats);
        Alpine.data('shipmentsList', () => shipments);
      } else {
        window.location.href = '/login';
      }
    });
  </script>
</Layout>