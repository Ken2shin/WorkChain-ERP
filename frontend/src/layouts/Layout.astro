---
import '../app/globals.css';

const {
  title = 'WorkChain ERP',
  description = 'Professional ERP for SMEs'
} = Astro.props;

const apiBaseUrl = import.meta.env.PUBLIC_API_BASE || 'http://localhost:8000/api';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style is:global>
      [x-cloak] { display: none !important; }
    </style>
  </head>

  <body
    x-data="appState()"
    class="min-h-screen bg-slate-50 text-slate-900 antialiased"
  >

    <div
      x-show="loading"
      x-cloak
      x-transition
      class="fixed inset-0 z-50 flex items-center justify-center bg-black/40"
    >
      <div class="bg-white rounded-2xl p-6 shadow-xl">
        <svg class="w-8 h-8 animate-spin text-blue-600" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" />
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.37 0 0 5.37 0 12h4z" />
        </svg>
      </div>
    </div>

    <div class="fixed top-4 right-4 z-40 space-y-2">
      <template x-for="toast in toasts" :key="toast.id">
        <div
          x-text="toast.message"
          :class="getToastClasses(toast.type)"
          class="px-4 py-3 rounded-xl shadow border text-sm font-medium"
          x-transition
        ></div>
      </template>
    </div>

    <slot />

    <script type="module">
      import Alpine from 'alpinejs';

      window.Alpine = Alpine;

      Alpine.data('appState', () => ({
        loading: false,
        toasts: [],
        token: localStorage.getItem('auth_token'),

        getToastClasses(type) {
          const base = 'border ';
          switch (type) {
            case 'success': return base + 'bg-green-100 text-green-800 border-green-200';
            case 'error':   return base + 'bg-red-100 text-red-800 border-red-200';
            case 'warning': return base + 'bg-yellow-100 text-yellow-800 border-yellow-200';
            default:        return base + 'bg-blue-100 text-blue-800 border-blue-200';
          }
        },

        showToast(message, type = 'info') {
          const id = Date.now();
          this.toasts.push({ id, message, type });
          setTimeout(() => {
            this.toasts = this.toasts.filter(t => t.id !== id);
          }, 3000);
        }
      }));

      Alpine.start();
    </script>

    <script define:vars={{ apiBase: apiBaseUrl }}>
      window.API_BASE = apiBase;
    </script>

  </body>
</html>